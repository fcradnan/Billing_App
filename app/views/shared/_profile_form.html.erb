<div class="d-flex justify-content-center align-items-center min-vh-100" style="background-color: #f8f9fa;">
  <div class="card shadow-lg p-4" style="width: 450px;">
    <h2 class="text-center mb-4 fw-bold" style="color: #5a0d69;">Edit Profile</h2>

    <%= form_with(
      model: @user,
      scope: :user,
      url: (current_user.is_a?(AdminUser) ? admin_profile_path : profile_path),
      local: true,
      html: { multipart: true }
    ) do |f| %>

      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h5 class="fw-bold"><%= pluralize(@user.errors.count, "error") %> prevented saving:</h5>
          <ul class="mb-0">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3 text-center">
        <% if @user.profile_photo.attached? %>
          <%= image_tag @user.profile_photo, class: "rounded-circle mb-2", style: "width:100px; height:100px; object-fit:cover;" %><br>
        <% else %>
          <%= image_tag "default_profile.png", class: "rounded-circle mb-2", style: "width:100px; height:100px; object-fit:cover;" %><br>
        <% end %>
        <%= f.file_field :profile_photo, class: "form-control mt-2" %>
      </div>

      <div class="mb-3">
        <%= f.label :name, class: "form-label fw-semibold" %>
        <%= f.text_field :name, class: "form-control", placeholder: "Enter your name" %>
      </div>

      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, class: "form-control", readonly: true %>
      </div>

      <div class="text-center mt-4">
        <%= f.submit "Save", class: "btn text-white px-4", style: "background-color: #5a0d69;" %>
      </div>


    <% end %>
     <div class="text-center mt-4">
  <%= link_to "â¬… Back to Dashboard",
      (current_user.is_a?(AdminUser) ? admin_dashboard_path : buyer_dashboard_path),
      class: "btn btn-outline-secondary px-4" %>
</div>

  </div>
</div>
