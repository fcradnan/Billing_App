<div class="container mt-5">
  <h1 class="fw-bold text-center mb-5" style="color: #5a0d69;">Buyer Dashboard</h1>

  <div class="row g-4 justify-content-center">
    <!-- Total Subscriptions -->
    <div class="col-md-3">
      <div class="card text-center shadow-sm border-0 p-4">
        <h5 class="fw-semibold text-muted">Total Subscriptions</h5>
        <h2 class="fw-bold" style="color: #5a0d69;"><%= @subscriptions_count %></h2>
      </div>
    </div>

    <!-- Active Subscriptions -->
    <div class="col-md-3">
      <div class="card text-center shadow-sm border-0 p-4">
        <h5 class="fw-semibold text-muted">Active Subscriptions</h5>
        <h2 class="fw-bold" style="color: #5a0d69;"><%= @active_subscriptions_count %></h2>
      </div>
    </div>

    <!-- Total Transactions -->
    <div class="col-md-3">
      <div class="card text-center shadow-sm border-0 p-4">
        <h5 class="fw-semibold text-muted">Total Transactions</h5>
        <h2 class="fw-bold " style="color: #5a0d69;"><%= @transactions_count %></h2>
      </div>
    </div>

    <!-- Total Spent -->
    <div class="col-md-3">
      <div class="card text-center shadow-sm border-0 p-4">
        <h5 class="fw-semibold text-muted">Total Spent</h5>
        <h2 class="fw-bold " style="color: #5a0d69;"><%= number_to_currency(@total_spent, unit: "Rs ") %></h2>
      </div>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="text-center mt-5">
    <%= link_to "Subscribe to New Plan", new_subscription_path,
        class: "btn text-white px-4 me-2",
        style: "background-color: #5a0d69; border-radius: 8px;" %>

    
  <%= link_to "View Active Subscriptions",
      subscriptions_path,
      class: "btn text-white px-4",
      style: "background-color:#5a0d69; border-radius:8px;" %>


    <%= link_to "View Usage Report", usage_report_path,
        class: "btn text-white px-4 me-2",
        style: "background-color: #5a0d69; border-radius: 8px;" %>

    <%= link_to "View Transactions", transactions_path,
        class: "btn text-white px-4 me-2",
        style: "background-color: #5a0d69; border-radius: 8px;" %>

    <%= link_to "Edit Profile", edit_profile_path,
        class: "btn text-white px-4 me-2",
        style: "background-color: #5a0d69; border-radius: 8px;" %>
  </div>
</div>
