<div class="container my-5">
  <div class="text-center mb-5">
    <h1 class="fw-bold" style="color: #5a0d69;">Admin Dashboard</h1>
    <p class="text-muted">Welcome to your FCR admin control panel</p>
  </div>


  <div class="row g-4 mb-4">
    <%= render partial: "card", locals: { title: "Total Buyers", value: @total_buyers } %>
    <%= render partial: "card", locals: { title: "Total Plans", value: @total_plans } %>
    <%= render partial: "card", locals: { title: "Total Revenue", value: number_with_delimiter(@total_revenue) + " PKR" } %>
    <%= render partial: "card", locals: { title: "Active Subscriptions", value: @active_subscriptions } %>
  </div>


  <div class="text-center mb-3">
    <%= render "link_button", name: "Manage Plans", path: admin_plans_path, extra_classes: "me-2" %>
    <%= render "link_button", name: "Manage Features", path: admin_features_path, extra_classes: "me-2" %>
    <%= render "link_button", name: "Add Usage", path: new_admin_usage_path, extra_classes: "me-2" %>
    <%= render "link_button", name: "Edit Profile", path: edit_admin_profile_path, extra_classes: "" %>
  </div>


  <div class="text-center">
    <%= render "action_button", name: "Run Billing Cycle", path: admin_run_billing_path, method: :post, extra_classes: "me-2" %>
  </div>
</div>
